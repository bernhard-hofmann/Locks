<?xml version="1.0" encoding="UTF-8"?>
<widget id="io.cordova.hellocordova">
	<name>Locks</name>
	<description>Simple lock puzzle</description>
	<author href="http://www.bluebearsoftware.co.uk" email="admin@bluebearsoftware.co.uk">Bernhard Hofmann</author>

 	<platform name="android">
		<icon src="icon.png" density="ldpi" />
		<icon src="icon.png" density="mdpi" />
		<icon src="icon.png" density="hdpi" />
		<icon src="icon.png" density="xhdpi" />
		
		<splash src="splash.png" density="port-hdpi"/>
		<splash src="splash.png" density="port-ldpi"/>
		<splash src="splash.png" density="port-mdpi"/>
		<splash src="splash.png" density="port-xhdpi"/>
	</platform>

	<feature name="Notification">
		<param name="android-package" value="org.apache.cordova.Notification" />
	</feature>

	<preference name="orientation" value="portrait" />
</widget>
